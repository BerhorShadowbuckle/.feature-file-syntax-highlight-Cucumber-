{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "feature",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "support.function",
					"match": "(Scenario( Outline| Template)?|Feature|Examples|Example|Background)"
				},
				{
					"name": "support.class",
					"match": "(Given|When|Then|And|But)"
				},
				{
					"name": "keyword.control.flow.js",
					"match": "(@[a-zA-Z0-9-]+)"
				},
				{
					"name": "keyword.operator.feature",
					"match": "\\|"
				},
				{
					"name": "variable.language",
					"match": "<[^>]*>"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.feature",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.feature",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"name": "comment",
			"patterns": [
				{
					"name": "comment",
					"match": "#.*"
				}
			]
		}
	},
	"scopeName": "source.feature"
}
